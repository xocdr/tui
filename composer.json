{
    "name": "xocdr/tui",
    "description": "Terminal UI framework for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeroen Keppens",
            "email": "jeroen.keppens@exocoder.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-tui": "*",
        "intervention/image": "^3.11",
        "league/commonmark": "^2.8",
        "scrivo/highlight.php": "^9.18",
        "sebastian/diff": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Xocdr\\Tui\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xocdr\\Tui\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse --memory-limit=8G",
        "format": "pint",
        "format:check": "pint --test"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
